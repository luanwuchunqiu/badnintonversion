<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#001c22"
    >

    <LinearLayout
        android:background="#001c22"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/countText1"
                    android:layout_marginBottom="5dp"

                    android:layout_marginLeft="20dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="挥拍次数榜"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    />
                <View

                    android:id="@+id/view1"
                    android:layout_marginLeft="20dp"
                    android:layout_width="90sp"
                    android:layout_height="2dp"
                    android:background="@color/orange"/>


            </LinearLayout>
            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">
                <TextView

                    android:layout_marginBottom="5dp"


                    android:id="@+id/calText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡里路榜"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    />
                <View
                    android:visibility="gone"
                    android:id="@+id/view2"
                    android:layout_width="72sp"
                    android:layout_height="2dp"
                    android:background="@color/orange"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/timeText3"
                    android:layout_marginBottom="5dp"

                    android:layout_marginLeft="20dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运动时间榜"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    />
                <View
                    android:visibility="gone"
                    android:id="@+id/view3"
                    android:layout_marginLeft="20dp"
                    android:layout_width="90sp"
                    android:layout_height="2dp"
                    android:background="@color/orange"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/select_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_left_background"
                android:textSize="16sp"
                android:text="本周"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />
            <TextView
                android:id="@+id/select_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_center_background"
                android:textSize="16sp"
                android:text="本月"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />
            <TextView
                android:id="@+id/select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_right_background"
                android:textSize="16sp"
                android:text="累计"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</LinearLayout>
